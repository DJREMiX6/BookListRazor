@page
@model BookListRazor.Pages.BookList.CreateBookModel

<br />
<h2 class="text-info">Create New Book</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        @*Name Section*@
        <div class="form-group row">
            <span asp-validation-for="Book.Name" class="col-8 offset-3 text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-1">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Book.Name" class="form-control" />
            </div>
        </div>

        @*Author Section*@
        <div class="form-group row">
            <span asp-validation-for="Book.Author" class="col-8 offset-3 text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-1">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-8">
                <input asp-for="Book.Author" class="form-control" />
            </div>
        </div>

        @*ISBN Section*@
        <div class="form-group row">
            <span asp-validation-for="Book.ISBN" class="col-8 offset-3 text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-1">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-8">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
        </div>

        @*Button Section*@
        <div class="form-group row">
            <div class="col-4 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-4">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section  Scripts {
    <partial name="_ValidationScriptsPartial" />
}
