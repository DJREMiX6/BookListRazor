@page
@model BookListRazor.Pages.AdminArea.LoginModel

<br />
<h2 class="text-info">Login</h2>
<br />

<div class="border container text-center" style="padding: 30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
            <span class="col-8 offset-3 text-danger" asp-validation-for="User.Username"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-1">
                <label asp-for="User.Username"></label>
            </div>
            <div class="col-8">
                <input type="text" asp-for="User.Username" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <span class="col-8 offset-3 text-danger" asp-validation-for="User.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-1">
                <label asp-for="User.Password"></label>
            </div>
            <div class="col-8">
                <input type="password" asp-for="User.Password" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 offset-3">
                <input type="submit" value="Login" class="btn btn-success form-control" />
            </div>
            <div class="col-4">
                <a asp-page="Register" class="btn btn-primary form-control">Register</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 